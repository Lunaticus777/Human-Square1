@{
    ViewData["Title"] = "Human Evolution – Coaching & Consulting";
}

<!-- FONTS & AOS -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@300;500;700&display=swap" rel="stylesheet" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

<style>
    body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    overflow-y: hidden;
}
    body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    overflow-y: hidden; /* ⛔️ Empêche le scroll vertical */
}

h1, h2, h5 { font-family: 'Playfair Display', serif; }
    .stats-box { text-align: center; }
    .stats-box h3 { font-size: 2.5rem; color: #003366; margin-bottom: 0.5rem; }
    .stats-box p { text-transform: uppercase; color: #555; letter-spacing: 1px; }
    .btn-primary { background: #003366; border: none; }
    .btn-primary:hover { background: #001f4d; }
    .card-service:hover { transform: translateY(-6px); box-shadow: 0 12px 25px rgba(0,0,0,0.1); }
</style>

</style>

<!-- HERO SECTION FULL WIDTH AVEC STATS DÉCALÉES EN BAS -->
<section class="full-width-section text-white text-center d-flex align-items-center justify-content-center position-relative"
         style="background-image: url('/images/hero-background.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                height: 100vh;">

    <!-- Overlay sombre -->
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background-color: rgba(0,0,0,0.4); z-index: 1;"></div>

    <!-- STATISTIQUES positionnées entre le haut et le centre -->
    <div class="position-absolute w-100" style="top: 15%; z-index: 2;">
        <div class="container">
            <div class="row text-center g-4 justify-content-center">
                <div class="col-6 col-md-3 stats-box mb-4">
                    <h3 class="text-white fs-2">
                        Depuis <span class="counter" data-target="2017">0</span>
                    </h3>
                    <p style="color: #ddd;">année de lancement</p>
                </div>
                <div class="col-6 col-md-3 stats-box mb-4">
                    <h3 class="text-white fs-2">
                        <span class="counter" data-target="784">0</span>
                    </h3>
                    <p style="color: #ddd;">Sessions de Coachings </p>
                </div>
                <div class="col-6 col-md-3 stats-box mb-4">
                    <h3 class="text-white fs-2">
                        <span class="counter" data-target="52">0</span>
                    </h3>
                    <p style="color: #ddd;">Projets accompagnés</p>
                </div>
                <div class="col-6 col-md-3 stats-box mb-4">
                    <h3 class="text-white fs-2">
                        <span class="counter" data-target="191">0</span>
                    </h3>
                    <p style="color: #ddd;">Formations réalisées</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu centré (logo, titre, bouton) avec décalage -->
    <div class="position-relative z-2 text-center hero-content" style="max-width: 900px; transform: translateY(60px);">
        <img src="/images/Logo_HE_blanc.png" alt="Logo HE blanc"
             style="height: 120px; max-width: 100%;" class="mb-4" />

        <h1 class="display-4 fw-bold">Coaching & Consulting</h1>
        <p class="lead">Accompagnement stratégique, personnalisé et structuré<br />pour votre projet immobilier au Portugal</p>
        <a asp-controller="Contact" asp-action="Contact" class="btn btn-primary btn-lg mt-3">Prendre rendez-vous</a>
    </div>
</section>



<!-- SERVICES -->
<section class="py-7 bg-light">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Nos domaines d’expertise</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-lg p-4 card-service text-center">
                    <h5 class="fw-bold mb-3">Coaching Professionnel</h5>
                    <p>Clarification des objectifs, priorisation et stratégie personnelle pour transformer vos ambitions en projet concret.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-lg p-4 card-service text-center">
                    <h5 class="fw-bold mb-3">Consulting Stratégique</h5>
                    <p>Étude de faisabilité, analyse fiscale et stratégie de rentabilité personnalisée.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card border-0 shadow-lg p-4 card-service text-center">
                    <h5 class="fw-bold mb-3">Formations</h5>
                    <p>Formations structurées et certifiantes pour renforcer vos compétences en investissement et gestion immobilière.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- TÉMOIGNAGES -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Témoignages</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="p-4 border rounded shadow-sm h-100">
                    <p class="fst-italic">“J’ai pu réaliser un vieux rêve et investir à Lisbonne sans stress. Un grand merci !”</p>
                    <footer class="blockquote-footer mt-3">Claire M., Lyon</footer>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="p-4 border rounded shadow-sm h-100">
                    <p class="fst-italic">“Une vraie vision stratégique, très bon accompagnement sur notre projet. Merci pour ce partage.”</p>
                    <footer class="blockquote-footer mt-3">João S., Porto</footer>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="p-4 border rounded shadow-sm h-100">
                    <p class="fst-italic">“Le coaching et les formations m'ont vraiment aidé à structurer mon projet et clarifier mes priorités.”</p>
                    <footer class="blockquote-footer mt-3">Miguel R., Genève</footer>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA FINAL -->
<section class="py-5 text-white text-center" style="background-color: #003366;">
    <div class="container" data-aos="zoom-in" data-aos-delay="100">
        <h2 class="mb-3">Prêt à lancer votre projet immobilier ?</h2>
        <p class="lead mb-4">Réservez un appel découverte et voyons comment Human Square peut vous accompagner.</p>
        <a asp-controller="Contact" asp-action="Contact" class="btn btn-outline-light btn-lg rounded-pill px-5 py-3">Contactez-nous</a>
    </div>
</section>

<!-- SCRIPTS -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1000, once: true });
</script>

