@{
    ViewData["Title"] = "Human Evolution – Coaching & Consulting";
}

<!-- HERO SECTION FULL WIDTH -->
<section class="full-width-section text-white text-center d-flex align-items-center justify-content-center"
         style="background-image: url('/images/hero-background.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                height: 100vh;">


    <!-- Overlay sombre -->
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0,0,0,0.4); z-index: 1;"></div>

    <!-- Contenu centré -->
    <div class="position-relative z-2" style="z-index: 2; max-width: 900px; margin: 0 auto;">
        <img src="/images/Logo_HE_blanc.png" alt="Logo HE blanc"
             style="height: 120px; max-width: 100%;" class="mb-4" />

        <h1 class="display-4 fw-bold">Coaching & Consulting</h1>
        <p class="lead">Accompagnement stratégique, personnalisé et structuré<br />pour votre projet immobilier au Portugal</p>
        <a asp-controller="Contact" asp-action="Contact" class="btn btn-primary btn-lg mt-3">Prendre rendez-vous</a>
    </div>
</section>

<!-- INTRO -->
<section class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-bold mb-4"></h2>
        <p class="text-muted lead"></p>
    </div>
</section>

<!-- SERVICES -->
<section class="py-7 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Nous apportons notre expertise et savoir pour la réussite de votre investissement</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Coaching Professionnel</h5>
                        <p class="card-text">Un accompagnement personnalisé pour identifier votre objectif et intégrer une vision clair de vos ambitions et projet.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Consulting Stratégique</h5>
                        <p class="card-text">Identification de projets avec l'étude de faisabilité complète, fiscalité, et stratégie de rentabilité sur mesure.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Accompagnement sur le Terrain</h5>
                        <p class="card-text">Mise en relation avec architectes, juristes, entreprises locales et suivi des travaux au Portugal.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- TÉMOIGNAGES -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5">Feedback</h2>
        <div class="row">
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>“J’ai pu réaliser un vieux rêve et investir à Lisbonne sans stress. Un grand merci!”</p>
                    <footer class="blockquote-footer">Claire M., Lyon</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>“Une vraie vision stratégique, très bon accompagnement sur notre projet. Merci pour ce partage.”</p>
                    <footer class="blockquote-footer">João S., Porto</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>“J'ai été surpris par le coaching, qui à eut une grande importance dans mon projet, suite à l'identification des mes prioritées.”</p>
                    <footer class="blockquote-footer">Miguel R., Genève</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>

<!-- CTA FINAL -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        <h2 class="mb-4">Un projet immobilier au Portugal ?</h2>
        <p class="lead">Réservez un appel découverte et voyons comment Human Evolution peut vous accompagner.</p>
        <a asp-controller="Contact" asp-action="Contact" class="btn btn-outline-light btn-lg">Contactez-nous</a>
    </div>
</section>
